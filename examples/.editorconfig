# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
insert_final_newline = false
max_line_length = 0
trim_trailing_whitespace = false
max_line_length = off

[COMMIT_EDITMSG]
max_line_length = 0
